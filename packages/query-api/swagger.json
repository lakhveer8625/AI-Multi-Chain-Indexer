{
    "openapi": "3.0.0",
    "info": {
        "title": "Multi-Chain Indexer API",
        "version": "1.0.0",
        "description": "API for querying indexed blockchain events"
    },
    "servers": [
        {
            "url": "http://localhost:4000"
        }
    ],
    "components": {
        "securitySchemes": {
            "ApiKeyAuth": {
                "type": "apiKey",
                "in": "header",
                "name": "x-api-key"
            }
        }
    },
    "security": [
        {
            "ApiKeyAuth": []
        }
    ],
    "paths": {
        "/graphql": {
            "post": {
                "summary": "GraphQL Endpoint",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "query": {
                                        "type": "string"
                                    },
                                    "variables": {
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "GraphQL Response"
                    }
                }
            }
        },
        "/health": {
            "get": {
                "summary": "Health Check",
                "responses": {
                    "200": {
                        "description": "Service is healthy"
                    }
                }
            }
        }
    }
}