{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@mci/shared": [
                "packages/shared/dist"
            ],
            "@mci/database": [
                "packages/database/dist"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}